<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimary"
    tools:context=".view.LoginActivity">

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_height"
        android:layout_centerInParent="true"
        android:drawableLeft="@drawable/ic_vk"
        android:drawableStart="@drawable/ic_vk"
        android:paddingLeft="@dimen/material_margin"
        android:paddingRight="@dimen/material_margin"
        android:layout_marginLeft="@dimen/material_margin"
        android:layout_marginStart="@dimen/material_margin"
        android:layout_marginEnd="@dimen/material_margin"
        android:layout_marginRight="@dimen/material_margin"
        android:text="@string/login"
        android:textSize="@dimen/login_text_size"
        android:textColor="@android:color/white"
        app:backgroundTint="@color/vk_share_top_blue_color" />

</RelativeLayout>
